<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- estilos da activity LoginActivity -->
    <style name="login_linearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="login_imageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="login_editText">
        <item name="android:backgroundTint">#FAFAFA</item>
        <item name="android:ems">10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textColorHint">#FAFAFA</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_button">
        <item name="android:background">#AA000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
